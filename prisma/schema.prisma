generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          String     @id @default(uuid())
  title       String
  description String
  date        DateTime
  capacity    Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  attendees   Attendee[]
}

model Attendee {
  id        String   @id @default(uuid())
  name      String
  email     String
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
